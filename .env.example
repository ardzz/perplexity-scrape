# Get these values from browser DevTools → Network tab → Copy cookies from any Perplexity request
# =============================================================================
PERPLEXITY_SESSION_TOKEN=your_session_token_here
PERPLEXITY_CF_CLEARANCE=your_cf_clearance_here
PERPLEXITY_VISITOR_ID=your_visitor_id_here
